@model RentalApp.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var className = Model.Customers.Count > 5 ? "popular" : null;
}

<h2 class ="@className">@Model.Movie.Name</h2> 

@* @Model.Customers    @ sign used to write c# code *@

@if (Model.Customers.Count == 0)
{
    <text>No one has rented the movie yet.</text>
}
else
{
    <ul>

        @foreach (var customer in Model.Customers) //to render the list of customers
        {
            //here we can write c# code or html, parsing will be up to razor syntax
            <li>@customer.Name</li>
        }
    </ul>

}