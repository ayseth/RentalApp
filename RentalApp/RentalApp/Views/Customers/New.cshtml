
@model RentalApp.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>


@using (Html.BeginForm("Create", "Customers"))  //<!--rendered a beginning form tag-->
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class= "form-control"}) @*TextBoxFor --- automatically suports validation for that field in contrast to raw html*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Birthday)
        @Html.TextBoxFor(m => m.Birthday, new { @class = "form-control" }) 
    </div>


    <div>
        <label>
            @Html.CheckBoxFor(m => m.IsSubscribedToNewsLetter) Subscribed to Newsletter

        </label>
    </div>
}